<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crRecentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Create"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/newGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/comAvatarView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_newgroup" />

                    <TextView
                        android:id="@+id/comNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginStart="10dp"
                        android:text="New group"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/newContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/addComAvatarView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_newcontact"/>

                    <TextView
                        android:id="@+id/addComNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginStart="10dp"
                        android:text="New contact"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkBrod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/addBrodAvatarView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_broadcast"/>

                <TextView
                    android:id="@+id/checkBrodTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:text="Check BR"/>

            </LinearLayout>

            <TextView
                android:id="@+id/recentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Groups on WhatsApp"
                android:textColor="@color/gray"
                android:textSize="18sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
<!--                tools:listitem="@layout/item_commun"-->


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>